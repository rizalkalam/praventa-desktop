<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.praventa.controller.pakar.LaporanPakarController"
            prefWidth="400" prefHeight="250"
            style="-fx-background-color: white; -fx-padding: 20;">

    <children>
        <VBox fx:id="laporanContainer" spacing="15" alignment="CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <!-- Judul -->
            <Label text="Validasi Laporan Pasien"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <!-- Info Pasien -->
            <VBox spacing="5" alignment="CENTER">
                <Label text="Username:" />
                <Text fx:id="usernameLabel" style="-fx-font-weight: bold;" />

                <Label text="Tanggal Laporan:" />
                <Text fx:id="tanggalLabel" />
            </VBox>

            <!-- Tombol -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="validateButton" text="✅ Validasi" onAction="#handleValidasi" />
                <Button fx:id="backButton" text="✖ Batal" onAction="#handleBack" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>

