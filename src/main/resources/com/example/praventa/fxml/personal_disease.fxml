<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.praventa.controller.PersonalDiseaseController">

   <children>
      <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

         <!-- Kolom Kiri -->
         <VBox prefHeight="700.0" prefWidth="624.0">
            <children>
               <BorderPane prefHeight="100.0" prefWidth="596.0" /> <!-- Spacer/header -->

               <!-- Area Form -->
               <AnchorPane fx:id="formPane" prefHeight="588.0" prefWidth="596.0">
                  <children>
                     <!-- Label Progress -->
                     <Label fx:id="progressLabel" layoutX="81.0" layoutY="14.0" text="1/6">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Label>

                     <!-- Judul -->
                     <Text fx:id="titleText" layoutX="82.0" layoutY="85.0" strokeType="OUTSIDE"
                           strokeWidth="0.0" text="Masukkan Umur Anda">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>

                     <!-- Deskripsi -->
                     <Text fx:id="descriptionText" layoutX="82.0" layoutY="116.0"
                           strokeType="OUTSIDE" strokeWidth="0.0"
                           wrappingWidth="423.412109375"
                           text="Masukkan usia Anda saat ini dalam satuan tahun. Usia akan memengaruhi perhitungan risiko kesehatan tertentu.">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Text>

                     <!-- TextField default, hanya aktif untuk input TEXT -->
                     <TextField fx:id="emailField" layoutX="84.0" layoutY="191.0"
                                prefHeight="42.0" prefWidth="399.0"
                                style="-fx-background-color: #ffff; -fx-border-color: #505050; -fx-border-radius: 10;">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </TextField>

                     <!-- Tombol Lanjut -->
                     <Button fx:id="nextButton" layoutX="83.0" layoutY="333.0"
                             mnemonicParsing="false"
                             prefHeight="37.0" prefWidth="399.0"
                             style="-fx-background-color: #9E91E1; -fx-background-radius: 10;"
                             text="Lanjut" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Button>
                  </children>
               </AnchorPane>

               <AnchorPane prefHeight="151.0" prefWidth="596.0" /> <!-- Spacer bawah -->
            </children>
         </VBox>

         <!-- Kolom Kanan: Ilustrasi -->
         <AnchorPane prefHeight="700.0" prefWidth="633.0">
            <children>
               <StackPane layoutX="43.0" layoutY="126.0" prefHeight="495.0" prefWidth="494.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <children>
                     <ImageView fitHeight="546.0" fitWidth="531.0" preserveRatio="true">
                        <image>
                           <Image url="@../../../../assets/bg_questionaire.png" />
                        </image>
                     </ImageView>
                  </children>
               </StackPane>
            </children>
         </AnchorPane>
      </HBox>
   </children>
</AnchorPane>